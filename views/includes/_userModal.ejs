<button
  type="button"
  class="btn btn-primary"
  data-toggle="modal"
  data-target="#userModal"
>
  Add a user <i class="fas fa-plus"></i>
</button>
<div
  class="modal fade"
  id="userModal"
  data-backdrop="static"
  tabindex="-1"
  role="dialog"
  aria-labelledby="staticBackdropLabek"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabek">
          Please fill-in user information
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          arial-label="Close"
        >
          <span aria-hidden="true"><i class="fas fa-times-circle"></i></span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/users" id="createUserForm" method="POST">
          <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control" type="text" id="name" name="name" />
          </div>
          <div class="form-group">
            <label for="age">Age:</label>
            <input class="form-control" type="text" id="age" name="age" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button
          type="submit"
          class="btn btn-primary"
          form="createUserForm"
          id="createUserBtn"
        >
          Add User
        </button>
      </div>
    </div>
  </div>
</div>
